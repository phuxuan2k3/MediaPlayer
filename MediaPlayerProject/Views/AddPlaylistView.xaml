<UserControl
    x:Class="MediaPlayerProject.Views.AddPlaylistView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MediaPlayerProject.Views"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    xmlns:vm="clr-namespace:MediaPlayerProject.ViewModels"
    Background="{StaticResource Background_1}"
    d:DataContext="{d:DesignInstance }">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="auto" />
            <RowDefinition
                Height="*" />

        </Grid.RowDefinitions>

        <!--Title-->
        <TextBlock
            Grid.Row="0"
            Text="Create New Playlist"
            FontSize="{StaticResource Heading2FontSize}"
            FontWeight="Bold"
            Foreground="{StaticResource WhiteBrush}"
            Margin="40"
            FontFamily="Monotype Corsiva" />

        <!--Options-->
        <Grid
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="Transparent"
            Grid.Row="1"
            Margin="30 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="auto" />
                <ColumnDefinition
                    Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="auto" />
                <RowDefinition
                    Height="auto" />
            </Grid.RowDefinitions>
            <Button
                Template="{DynamicResource TextBlockButton}"
                Cursor="Hand"
                Background="Transparent"
                Content="Delete"
                Command="{Binding DeletePlaylistCommand}">
            </Button>
            <Button
                Template="{DynamicResource TextBlockButton}"
                Cursor="Hand"
                Background="Transparent"
                Content="Create"
                Command="{Binding CreatePlaylistCommand}">
            </Button>
        </Grid>
    </Grid>

