<UserControl
    x:Name="keyDown"
    x:Class="MediaPlayerProject.Views.PlaylistListingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MediaPlayerProject.Views"
    xmlns:vm="clr-namespace:MediaPlayerProject.ViewModels"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:DataContext="{d:DesignInstance Type=vm:PlaylistListingViewModel}"
    Background="{StaticResource Background_1}"
    MouseDown="UC_MouseDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="auto" />
            <RowDefinition
                Height="auto" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>

        <!--Title-->
        <TextBlock
            Grid.Row="0"
            Text="Playlists"
            FontSize="{StaticResource Heading1FontSize}"
            FontWeight="Bold"
            Foreground="{StaticResource WhiteBrush}"
            Margin="20"
            FontFamily="Monotype Corsiva" />

        <!--Options-->
        <StackPanel
            HorizontalAlignment="Right"
            Orientation="Horizontal"
            Background="Transparent"
            Grid.Row="1"
            Margin="30 0">
            <StackPanel.Resources>
                <Style
                    TargetType="Button">
                    <Setter
                        Property="Margin"
                        Value="20 10" />
                    <Setter
                        Property="Padding"
                        Value="10 5" />
                    <Setter
                        Property="BorderThickness"
                        Value="0" />
                </Style>
            </StackPanel.Resources>
            <Button
                Template="{DynamicResource TextBlockButton}"
                Cursor="Hand"
                Background="Transparent"
                Content="Delete"
                Command="{Binding DeletePlaylistCommand}">
            </Button>
            <Button
                Template="{DynamicResource TextBlockButton}"
                Cursor="Hand"
                Background="Transparent"
                Content="Create"
                Command="{Binding CreatePlaylistCommand}">
            </Button>
        </StackPanel>

        <ListView
            BorderThickness="0"
            x:Name="MyListView"
            SelectedItem="{Binding SelectedPlaylist}"
            Grid.Row="2"
            Background="Transparent"
            ItemsSource="{Binding Playlists}">
            <ListView.Resources>
                <Style
                    BasedOn="{StaticResource G1_ListViewItemStyle}"
                    TargetType="{x:Type ListViewItem}">
                    <EventSetter
                        Event="MouseDoubleClick"
                        Handler="ListViewItemDoubleClick" />
                </Style>
            </ListView.Resources>
            <ListView.ItemTemplate>
                <DataTemplate
                    x:Name="SingleLineDataTemplate">
                    <StackPanel
                        Orientation="Horizontal">
                        <Image
                            Source="{Binding Source='playlist.png',  Converter={StaticResource ImagePathConverter}}"
                            Height="{StaticResource ImageIconSize}"
                            Width="{StaticResource ImageIconSize}"
                            Margin="18"
                            VerticalAlignment="Center" />
                        <TextBlock
                            Text="{Binding Name}"
                            VerticalAlignment="Center"
                            Margin="12,0,0,0" />
                        <TextBlock
                            Opacity="0.5"
                            Text="{Binding TimeCreated}"
                            VerticalAlignment="Center"
                            Margin="12,0,0,0" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
